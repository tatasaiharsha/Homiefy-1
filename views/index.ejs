<body>


    <header>
        <img class="logo" src="" alt="logo"> 

        <nav>

            <ul class="nav__links">
                <li><a href="#">Home</a></li>
                <li><a href="#">About</a></li>
                <li><a href="#">Contact</a></li>
                
            </ul>
            
        </nav>
        <a class="lg-su" href="#"><button>Login | Register</button></a>

    </header>

    <div class="messages">
        <%= msg %>
        <!-- <%= typeof msg!='undefined' ? msg : '' %> -->
    </div>

    <div class="registerForm">
            <form method="POST" action="http://localhost:8001/register" enctype="multipart/form-data">
                <!-- <h3>Sign Up</h3> -->

                <div class="form-group fname" >
                    <!-- <label>First name</label> -->
                    <input type="text" name="fname" class="form-control" placeholder="First name" required/>
                </div>

                <div class="form-group">
                    <!-- <label>Last name</label> -->
                    <input type="text" name="lname" class="form-control" placeholder="Last name" required/>
                </div>

                <div class="form-group">
                    <!-- <label>Email address</label> -->
                    <input type="email"  name="email" pattern="[^[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.+-]+\.edu$]"class="form-control" placeholder="Enter email" required/>
                </div>

                <div >
                   <input type="file" name="profilePicture" accept=".jpg, .jpeg, .png">
                </div> 

                <div class="form-group">
                    <!-- <label>Password</label> -->
                    <input type="password" name="password" class="form-control" placeholder="Enter password" required/>
                </div>

                <button class="btn" type="submit">Register</button>
                <p class="message">
                    Already registered <a href="/#">sign in?</a>
                </p>
            </form>
            
        </div>

        <div class="loginForm">
            <form method="POST" action="http://localhost:8001/login" enctype="multipart/form-data">
                <!-- <h3>Sign Up</h3> -->

              

                <div class="form-group">
                    <!-- <label>Email address</label> -->
                    <input type="email"  name="email" pattern="[^[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.+-]+\.edu$]"class="form-control" placeholder="Enter email" required/>
                </div>

                <div class="form-group">
                    <!-- <label>Password</label> -->
                    <input type="password" name="password" class="form-control" placeholder="Enter password" required/>
                </div>

                <button class="btn" type="submit">Log in</button>
                <p class="message">
                    Not registered? <a href="/#">Register</a>
                </p>
            </form>
            
        </div>
