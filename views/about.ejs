  <div class="registerForm">
        <!-- <form method="POST" action="https://homiefy-group-a.herokuapp.com/register" enctype="multipart/form-data"> -->
        <form method="POST" action="/api/auth/register" enctype="multipart/form-data">
            <!--h3>Sign Up</h3> -->
            <div class="close-btn">&times;</div>
            <div class="form-group fname">
                <!-- <label>First name</label> -->
                <input type="text" name="fname" class="form-control" placeholder="First name" required />
            </div>

            <div class="form-group">
                <!-- <label>Last name</label> -->
                <input type="text" name="lname" class="form-control" placeholder="Last name" required />
            </div>

            <div class="form-group">
                <!-- <label>Email address</label> -->
                <input type="email" name="email" pattern="[^[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.+-]+\.edu$]"
                    class="form-control" placeholder="Enter email" required />
            </div>

            <div>
                <input type="file" name="profilePicture" accept=".jpg, .jpeg, .png">
            </div>

            <div class="form-group">
                <!-- <label>Password</label> -->
                <input type="password" name="password" class="form-control" placeholder="Enter password" required />
            </div>

            <button class="main-white-button" type="submit">Register</button>
            <p class="text-white">Already registered? <a id="show-login2">Log in</a></p>
        </form>


    </div>

    <div class="loginForm ">
        <!-- <form method="POST" action="https://homiefy-group-a.herokuapp.com/login" enctype="multipart/form-data"> -->
        <form method="POST" action="/api/auth/login" Content-Type="application/json">
            <!--<h3>LOG IN FORM</h3> -->


            <div class="close-btn">&times;</div>
            <div class="form-group">
                <!-- <label>Email address</label> -->
                <input type="email" name="email" pattern="[^[a-zA-Z0-9._%+-]+@[a-zA-Z0-9.+-]+\.edu$]"
                    class="form-control" placeholder="Enter email" required />
            </div>

            <div class="form-group">
                <!-- <label>Password</label> -->
                <input type="password" name="password" class="form-control" placeholder="Enter password" required />
            </div>

            <button class="main-white-button" type="submit">Log in</button>
            <p class="message text-white">Not registered? <a id="show-register">Register</a></p>
        </form>

    </div>
